                        <EditText
                            android:id="@+id/etSystolicAd2"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_margin="10dp"
                            android:ems="10"
                            android:inputType="numberSigned"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvSysAdv2"
                            tools:text="0" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvDiaAd2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Presión Diastolica (mmHg)"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/etDiastolicAd2"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_margin="10dp"
                            android:ems="10"
                            android:inputType="numberSigned"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvDiaAd2"
                            tools:text="0" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnUpdate2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actualizar" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

